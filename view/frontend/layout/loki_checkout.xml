<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <head>
        <remove src="Paynl_Payment::css/payFastCheckout.css"/>
        <remove src="Paynl_Payment::css/payCheckout.css"/>
    </head>

    <body>
        <referenceBlock name="Custom_css" remove="true"/>
        <referenceBlock name="fast.checkout.settings" remove="true"/>

        <referenceBlock name="loki-checkout.fast_checkout">
            <block
                name="loki-checkout-pay-nl.fast-checkout.ideal"
                template="Yireo_LokiCheckoutPayNl::fast_checkout/ideal.phtml"
                ifconfig="yireo_loki_checkout/paynl/ideal_fast_checkout_enabled"
            >
                <block
                    name="loki-checkout-pay-nl.fast-checkout.ideal.modal" as="modal"
                    template="Yireo_LokiCheckoutPayNl::fast_checkout/ideal/modal.phtml"
                    />
                <block
                    name="loki-checkout-pay-nl.fast-checkout.ideal.simple" as="simple"
                    template="Yireo_LokiCheckoutPayNl::fast_checkout/ideal/simple.phtml"
                />
            </block>
        </referenceBlock>
    </body>
</page>
